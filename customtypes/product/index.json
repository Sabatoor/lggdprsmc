{
  "id": "product",
  "label": "Product",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Enter the Product Title",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "product_type": {
        "type": "Link",
        "config": {
          "label": "Product Type",
          "select": "document",
          "customtypes": ["product_type"]
        }
      },
      "brand": {
        "type": "Link",
        "config": {
          "label": "Brand",
          "select": "document",
          "customtypes": ["brand"]
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "placeholder": "Enter the product status",
          "options": [
            "in stock",
            "low stock",
            "backordered",
            "out of stock",
            "discontinued"
          ],
          "default_value": "in stock"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Enter a shorter description",
          "allowTargetBlank": true,
          "single": "paragraph,strong,em,hyperlink"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Describe the product",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "files": {
        "type": "Group",
        "config": {
          "label": "Files",
          "fields": {
            "file": {
              "type": "Link",
              "config": {
                "label": "File",
                "placeholder": "",
                "select": "media"
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "embed": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            },
            "recents": {
              "type": "SharedSlice"
            },
            "scroller": {
              "type": "SharedSlice"
            },
            "image_with_text": {
              "type": "SharedSlice"
            },
            "content": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
