{
  "id": "settings",
  "label": "Settings",
  "format": "custom",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "domain": {
        "type": "Text",
        "config": {
          "label": "Domain",
          "placeholder": ""
        }
      },
      "site_title": {
        "type": "Text",
        "config": {
          "label": "Site Title",
          "placeholder": ""
        }
      },
      "logo": {
        "type": "Image",
        "config": {
          "label": "Logo",
          "constraint": {},
          "thumbnails": []
        }
      },
      "phone_number": {
        "type": "Text",
        "config": {
          "label": "Phone Number",
          "placeholder": ""
        }
      },
      "site_meta_description": {
        "type": "Text",
        "config": {
          "label": "Site Meta Description",
          "placeholder": ""
        }
      },
      "site_meta_image": {
        "type": "Image",
        "config": {
          "label": "Site Meta Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "site_theme": {
        "type": "Select",
        "config": {
          "label": "Site Theme",
          "placeholder": "",
          "options": ["Base", "Alternate"]
        }
      },
      "navigation": {
        "type": "Group",
        "config": {
          "label": "Navigation",
          "fields": {
            "link": {
              "type": "Link",
              "config": {
                "label": "Link",
                "placeholder": "",
                "select": null
              }
            },
            "label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": ""
              }
            }
          }
        }
      },
      "footer_logo": {
        "type": "Image",
        "config": {
          "label": "Footer Logo",
          "constraint": {},
          "thumbnails": []
        }
      },
      "footer_socials": {
        "type": "Group",
        "config": {
          "label": "Footer Socials",
          "fields": {
            "logo": {
              "type": "Select",
              "config": {
                "label": "Logo",
                "placeholder": "",
                "options": ["Facebook", "Instagram", "LinkedIn", "Yelp"]
              }
            },
            "social_url": {
              "type": "Link",
              "config": {
                "label": "Social URL",
                "placeholder": "",
                "select": null
              }
            }
          }
        }
      },
      "company_information": {
        "type": "StructuredText",
        "config": {
          "label": "Company Information",
          "placeholder": "Enter company info",
          "allowTargetBlank": true,
          "multi": "list-item"
        }
      },
      "terms_of_service": {
        "type": "StructuredText",
        "config": {
          "label": "Terms of Service",
          "placeholder": "Enter terms of service info",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "design_credit": {
        "type": "StructuredText",
        "config": {
          "label": "Design Credit",
          "placeholder": "Optionally give credit to designers.",
          "allowTargetBlank": true,
          "single": "paragraph,hyperlink"
        }
      }
    }
  }
}
